@model BlogSimple.Model.ViewModels.HomeIndexViewModel;
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Page content-->
<div class="container">
    <div class="row">
        <!-- Blog entries-->
        <div class="col-lg-8">
            <!-- Featured blog post-->
            @if (Model.Blogs.Any())
            {
                <div class="card mb-4">
                    <a href="/Dashboard/Details/@Model.FeaturedBlog.Id"><img class="card-img-top" src="https://dummyimage.com/850x350/dee2e6/6c757d.jpg" alt="..." /></a>
                    <div class="card-body">
                        <div class="small text-muted">@Model.FeaturedBlog.CreatedOn.ToString("MMM d, yyyy")</div>
                        <h2 class="card-title h4"><a href="/Blog/Details/@Model.FeaturedBlog.Id">@Model.FeaturedBlog.Title</a></h2>
                        <p class="card-text">@Model.FeaturedBlog.Description</p>
                    </div>
                </div>
            }
            <!-- Nested row for non-featured blog posts-->
            <div class="row">
                @if (!Model.Blogs.Any())
                {
                    <p>There are no blog posts at this moment... <a href="/Account/Register">Sign up</a> now to create a blog post!</p>
                }
                else
                {
                    int idx = 0;
                    @foreach (var blog in Model.Blogs)
                    {
                        idx++;
                        if (!blog.isFeatured)
                        {
                            @if (idx % 2 != 0)
                            {
                                <div class="col-lg-6">
                                    <!-- Blog post-->
                                    <div class="card mb-4">
                                        <a href="/Blog/Details/@blog.Id"><img class="card-img-top" src="https://dummyimage.com/700x350/dee2e6/6c757d.jpg" alt="..." /></a>
                                        <div class="card-body">
                                            <div class="small text-muted">@blog.CreatedOn.ToString("MMM d, yyyy")</div>
                                            <h2 class="card-title h4"><a href="/Blog/Details/@Model.FeaturedBlog.Id">@blog.Title</a></h2>
                                            <p class="card-text">@blog.Description</p>
                                            @*<a class="btn btn-primary" href="#!">Read more →</a>*@
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (idx % 2 == 0)
                            {
                                <div class="col-lg-6">
                                    <!-- Blog post-->
                                    <div class="card mb-4">
                                        <a href="/Blog/Details/@blog.Id"><img class="card-img-top" src="https://dummyimage.com/700x350/dee2e6/6c757d.jpg" alt="..." /></a>
                                        <div class="card-body">
                                            <div class="small text-muted">@blog.CreatedOn.ToString("MMM d, yyyy")</div>
                                            <h2 class="card-title h4"><a href="/Blog/Details/@Model.FeaturedBlog.Id">@blog.Title</a></h2>
                                            <p class="card-text">@blog.Description</p>
                                            @*<a class="btn btn-primary" href="#!">Read more →</a>*@
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                }
            </div>
            <!-- Pagination-->
            <nav aria-label="Pagination">
                <hr class="my-0" />
                <ul class="pagination justify-content-center my-4">
                    <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                    <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                    <li class="page-item"><a class="page-link" href="#!">2</a></li>
                    <li class="page-item"><a class="page-link" href="#!">3</a></li>
                    <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                    <li class="page-item"><a class="page-link" href="#!">15</a></li>
                    <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                </ul>
            </nav>
        </div>
        <!-- Side widgets-->
        <div class="col-lg-4">
            <!-- Search widget-->
            <div class="card mb-4">
                <div class="card-header">Search</div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Index" class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
                        <div class="input-group">
                            <input class="form-control" id="barSearch" asp-for="SearchString" type="text" placeholder="Enter search term..." aria-label="Enter search term..." aria-describedby="button-search" />
                            <button class="btn btn-primary" id="btnSearch" type="submit"><i class="fas fa-search"></i></button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Categories widget-->
            <div class="card mb-4">
                <div class="card-header">Categories</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#!">Web Design</a></li>
                                <li><a href="#!">HTML</a></li>
                                <li><a href="#!">Freebies</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-6">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#!">JavaScript</a></li>
                                <li><a href="#!">CSS</a></li>
                                <li><a href="#!">Tutorials</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Side widget-->
            <div class="card mb-4">
                <div class="card-header">Side Widget</div>
                <div class="card-body">You can put anything you want inside of these side widgets. They are easy to use, and feature the Bootstrap 5 card component!</div>
            </div>
        </div>
    </div>
</div>

