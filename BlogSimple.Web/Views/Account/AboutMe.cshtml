@using BlogSimple.Model.ViewModels.AccountViewModels;
@model AboutMeViewModel;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "About Me";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page content-->
<div class="container mt-5">

    <div class="row">
        <div class="col-lg-8">
            <!-- Post content-->
            <article>
                <!-- Post header-->
                <header class="mb-4">
                    <!-- Post title-->
                    <h1 class="fw-bolder mb-2">About Me</h1>
                    <figure class="mb-4"><img class="img-fluid rounded" src="~/UserFiles/Users/@Model.User.Id/HeaderImage.jpg" alt="@Model.User.FirstName @Model.User.LastName"></figure>
                    <h2 class="fw-bolder mb-1">@Model.User.UserName</h2>
                    <div class="text-muted fst-italic mb-1">Joined on @Model.User.CreatedOn.ToShortDateString()</div>
