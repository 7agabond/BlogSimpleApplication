@model BlogSimple.Model.Models.UserRole

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Account/_AccountLayout.cshtml";
}


<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card bg-dark shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header text-white">
                                <h3 class="text-center font-weight-light my-4">Welcome to Blog Simple!</h3>
                            </div>
                            <div class="card-body">
                                @if (ViewBag.Message != null)
                                {
                                    <div class="p-1 mb-2 bg-success text-white">@ViewBag.Message</div>
                                }
                                <form asp-action="CreateRole">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="RoleName" class="form-control" type="text" />
                                        <label asp-for="RoleName">Role Name</label>
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <input type="submit" value="Create Role" class="btn btn-primary btn-block w-100 p-2" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
