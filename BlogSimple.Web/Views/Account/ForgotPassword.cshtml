@model BlogSimple.Model.ViewModels.AccountViewModels.ForgotPasswordViewModel;
@{
    ViewData["Title"] = "Forgot Password";
}


<div class="container">

    <h1>Forgot Password</h1>

    <h4>Forgot Password</h4>
    <div class="row">
        <div class="col-md-4">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>If you are registered with us, <br />
                    we have sent an email to your registered email id.</p>
                </div>
            }
            else
            {
                <p>Forgot your password? No worries, you can reset it now.</p>
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-controler" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary">
                    </div>
                </form>
            }
        </div>
    </div>
</div>
