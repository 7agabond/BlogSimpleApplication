@model BlogSimple.Model.ViewModels.AccountViewModels.ForgotPasswordViewModel;
@{
    ViewData["Title"] = "Forgot Password";
}


<div class="container">



    <main>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card bg-dark shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header">
                            <h3 class="text-center text-white font-weight-light my-4">Forgot Password</h3>
                        </div>
                        <div class="card-body text-white">
                            @if (Model?.EmailSent == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    <p>
                                        If you are registered with us, <br />
                                        we have sent an email to your registered email id.
                                    </p>
                                </div>
                            }
                            else
                            {
                                <p>Forgot your password? No worries, you can reset it now.</p>
                                <form asp-action="ForgotPassword">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Email" class="form-control" />
                                        <label asp-for="Email" class="text-black"></label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Send Email" class="btn btn-primary">
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
