@model BlogSimple.Model.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card bg-dark shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center text-white font-weight-light my-4">Welcome to Blog Simple!</h3>
                            </div>
                            <div class="card-body">
                                <form asp-action="Login">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="UserName" class="form-control" />
                                        <label asp-for="UserName">Username</label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3 bg-dark-light">
                                        <input asp-for="Password" class="form-control" type="password" />
                                        <label asp-for="Password"></label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    @*<div class="form-check mb-3">
                                        <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                        <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                                    </div>*@
                                    <div class="d-flex align-items-center justify-content-between">
                                        <a class="small text-white" href="password.html">Forgot your password?</a>
                                    </div>
                                    <div >
                                        <input type="submit" value="Login" class="btn btn-primary w-100 mt-4 p-2">
                                        <div class="text-white my-2 font-weight-bold">OR</div>
                                        <div class="small"><a href="/Account/Register" class="text-white">Need an account? Sign up!</a></div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="js/scripts.js"></script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
